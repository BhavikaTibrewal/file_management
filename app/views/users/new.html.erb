
  <h2> Sign Up</h2>
  <hr>
  <%= form_with( url: '/signup', method: 'post') do |form| %>
  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    <% end %>

  <div class="form-group mb-3">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control',
                            required: true, minlength: 8, maxlength: 15,
                            pattern: '(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).*',
                            title: 'Password must contain atleast one uppercase, lowercase and number' %>
  </div>

  <%= form.submit class: 'btn btn-md btn-primary mb-3' %>
  <p>Have an account? Click <%= link_to  'here', '/login' %> to sign in.</p>
  <% end %>
