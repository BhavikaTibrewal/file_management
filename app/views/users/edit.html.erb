<div class="signup-form">
  <%=form_with url: '/profile', method: 'patch' do |form| %>

    <h2>User Profile - <%= @user.user_name %></h2>
    <hr>
    <div class="form-group mb-3">
      <label>Full Name</label>
      <input type="text" class="form-control" value="<%= @user.full_name %>">
    </div>
    <div class="form-group mb-3">
      <label>Email Address</label>
      <input type="text" class="form-control" value="<%= @user.email %>">
    </div>
    <div class="form-group">

        <%form.submit "Edit Profile",  class:"btn btn-primary btn-block btn-lg"%>



    </div>
    <% if @profile_updated %>
      <div class="form-message">
        <small class="text-success">Profile updated successfully!</small>
      </div>
    <% end %>
  <% end %>
</div>
